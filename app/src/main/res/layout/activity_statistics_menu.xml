<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".StatisticsMenuActivity">

  <Button
    android:id="@+id/wordStatisticsButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="openWordStatistics"
    android:text="@string/word_statistics"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/gameStatisticsButton"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/gameStatisticsButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="openGameStatistics"
    android:text="@string/game_statistics"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/wordStatisticsButton"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
